<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" dividerPositions="0.3" orientation="VERTICAL"
           prefHeight="600.0" xmlns="http://javafx.com/javafx/8.0.171"
           fx:controller="com.faforever.moderatorclient.ui.main_window.UserManagementController">

    <!-- Top section with VBox and TableView -->
    <SplitPane>
        <!-- VBox containing search and other controls -->
        <VBox minWidth="220.0" maxWidth="440" spacing="5">
            <ComboBox fx:id="searchUserProperties" promptText="Search by" visibleRowCount="42"/>
            <TextField fx:id="userSearchTextField" onAction="#onUserSearch"/>
            <Button mnemonicParsing="false" onAction="#onUserSearch" text="Search" alignment="CENTER"/>
            <Label text="Search History:" fx:id="searchHistoryLabel" alignment="CENTER"/>
            <TextArea fx:id="SearchHistoryTextArea" editable="false" promptText="history (resets with new start)"/>
            <Label text="User Notes:" fx:id="userNotesLabel" alignment="CENTER"/>
            <TextArea fx:id="NotesTextArea" promptText="notes (resets with new start)"/>
            <Separator/>
            <TextField fx:id="smurfVillageLookupTextField" onAction="#onLookupSmurfVillage" promptText="player ID required here"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button mnemonicParsing="false" onAction="#onLookupSmurfVillage" text="Smurf Village Lookup"/>
                <Label fx:id="statusLabelSmurfVillageLookup" text="Idle      " style="-fx-background-color: blue;"/>
                <TextField fx:id="statusTextFieldProcessingPlayerID" text="Status" editable="false"/>
            </HBox>
            <TextField fx:id="statusTextFieldProcessingItem" text="Detailed Status Information" editable="false"/>
            <Separator/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="checkRecentAccountsForSmurfsButton" minWidth="200.0" mnemonicParsing="false"
                        onAction="#checkRecentAccountsForSmurfs" text="checkRecentAccountsForSmurfs"/>
                <Text fx:id="statusTextRecentAccountsForSmurfs" text="Status:"/>
            </HBox>
            <Text fx:id="amountAccountsText"
                  text="Number of recent registered accounts to check (up to 1000, 135 = ~1 day of new accounts)"/>
            <TextField fx:id="amountTextFieldRecentAccountsForSmurfsAmount" text="405"/>
        </VBox>

        <!-- TableView for user search results -->
        <TableView fx:id="userSearchTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   minWidth="550.0" prefHeight="200.0" HBox.hgrow="ALWAYS"/>
    </SplitPane>

    <!-- Bottom section with Tabs -->
    <TabPane minHeight="200.0" tabClosingPolicy="UNAVAILABLE">
        <Tab fx:id="notesTab" text="Notes">
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                <TableView fx:id="userNoteTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TableView>
                <HBox alignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <Button fx:id="addNoteButton" mnemonicParsing="false" onAction="#addNote" text="Add note"/>
                    <Button fx:id="editNoteButton" mnemonicParsing="false" onAction="#editNote" text="Edit selected note">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </Tab>
        <Tab fx:id="bansTab" text="Bans">
            <VBox>
                <TableView fx:id="userBansTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TableView>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <Button fx:id="newBanButton" disable="true" mnemonicParsing="false" onAction="#onNewBan" text="Apply new ban">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="editBanButton" disable="true" mnemonicParsing="false" onAction="#onEditBan" text="Edit selected ban">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </Tab>
        <Tab fx:id="teamkillsTab" text="Teamkills">
            <TableView fx:id="userTeamkillsTableView" prefHeight="200.0" prefWidth="200.0"/>
        </Tab>
        <Tab fx:id="nameHistoryTab" text="Name History">
            <TableView fx:id="userNameHistoryTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0"/>
        </Tab>
        <Tab fx:id="lastGamesTab" text="Last Games">
            <VBox>
                <HBox spacing="10">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                    <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Show featured Mods:"/>
                    <ChoiceBox fx:id="featuredModFilterChoiceBox" minWidth="150.0"/>
                    <Button fx:id="loadMoreGamesButton" onAction="#loadMoreGames" text="Load more"/>
                </HBox>
                <TableView fx:id="userLastGamesTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab fx:id="avatarsTab" text="Avatars">
            <VBox>
                <TableView fx:id="userAvatarsTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <Button fx:id="giveAvatarButton" mnemonicParsing="false" onAction="#onGiveAvatar" text="Give selected avatar from main avatar tab"/>
                    <Separator orientation="VERTICAL"/>
                    <TextField fx:id="expiresAtTextfield" promptText="2018-12-31T23:59:59Z"/>
                    <Button fx:id="setExpiresAtButton" mnemonicParsing="false" onAction="#onSetExpiresAt" text="Set expires at"/>
                    <Separator orientation="VERTICAL"/>
                    <Button fx:id="takeAvatarButton" mnemonicParsing="false" onAction="#onTakeAvatar" text="Take avatar"/>
                </HBox>
            </VBox>
        </Tab>
        <Tab fx:id="userGroupsTab" text="User Groups">
            <VBox>
                <HBox VBox.vgrow="ALWAYS">
                    <TableView fx:id="userGroupsTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                    <TableView fx:id="permissionsTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                </HBox>
                <HBox VBox.vgrow="NEVER" maxHeight="50" spacing="10.0" alignment="CENTER">
                    <Button text="Add User To Group" onAction="#openGroupDialog"/>
                    <Button fx:id="removeGroupButton" text="Remove User from Group" onAction="#onRemoveGroup"/>
                </HBox>
            </VBox>
        </Tab>
        <Tab fx:id="searchSmurfVillageLookupTab" text="Output of Smurf Village Lookup">
            <VBox>
                <TextArea fx:id="searchSmurfVillageTabTextArea" promptText="Debug status is displayed in the console window. The output will be saved as a .txt file in the project folder." VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab fx:id="logSmurfVillageTab" text="Log of SVL">
            <VBox>
                <TextArea fx:id="logSmurfVillageTabTextArea" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab fx:id="settingsSmurfVillageLookupTab" text="Settings Smurf Village Lookup">
            <VBox>
                <CheckBox fx:id="excludeItemsCheckBox" text="Exclude junk/malformed items (see Settings)" disable="true"/>
                <Separator/>
                <Text style="-fx-font-size: 12pt;">Start with UUID, add further CheckBoxes as needed.</Text>
                <CheckBox fx:id="includeUUIDCheckBox" text="Include UUID"/>
                <CheckBox fx:id="includeUIDHashCheckBox" text="Include Hash"/>
                <CheckBox fx:id="includeIPCheckBox" text="Include IP"/>
                <CheckBox fx:id="includeMemorySerialNumberCheckBox" text="Include Memory Serial Number"/>
                <CheckBox fx:id="includeVolumeSerialNumberCheckBox" text="Include Volume Serial Number"/>
                <CheckBox fx:id="includeSerialNumberCheckBox" text="Include Serial Number"/>
                <CheckBox fx:id="includeProcessorIdCheckBox" text="Include Processor Id"/>
                <CheckBox fx:id="includeProcessorNameCheckBox" text="Include Processor Name"/>
                <CheckBox fx:id="includeManufacturerCheckBox" text="Include Manufacturer"/>
                <Separator/>
                <Text>maxUniqueUsersThreshold:</Text>
                <TextField fx:id="maxUniqueUsersThresholdTextField" layoutX="10" layoutY="10" promptText="Enter an integer value - Default 100"/>
                <Text>If a unique hardware item has shared properties with more than X accounts, it will inform about it, but not give details about each account. Default 100</Text>
                <Separator/>
                <Text>depthScanningInput:</Text>
                <TextField fx:id="depthScanningInputTextField" layoutX="10" layoutY="10" promptText="Default 1000" editable="false"/>
                <Text>WIP - Needs further development. Not editable.</Text>
                <Separator orientation="VERTICAL"/>
                <Separator/>
                <Button fx:id="saveSettingsButton" text="Save Settings" onAction="#saveSettings"/>
                <Separator orientation="VERTICAL"/>
            </VBox>
        </Tab>
    </TabPane>
</SplitPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="com.faforever.moderatorclient.ui.main_window.SettingsController">
    <Text>Account credentials:</Text>
    <TextField fx:id="accountNameOrEmailTextField" minWidth="300" promptText="Account name or email"/>
    <PasswordField fx:id="accountPasswordTextField" minWidth="300" promptText="Password"/>
    <Button fx:id="saveAccountButton" text="Save credentials" mnemonicParsing="false" onAction="#SaveAccountButton"/>
    <Separator prefHeight="10" />
    <Text textAlignment="CENTER"  text="If credentials are wrong and you can not auto login anymore, change them in account_credentials.txt -> File is in project folder."/>
    <TextField fx:id="pathAccountFile" text="restart to see path"/>
    <Text>Open:</Text>
    <Button fx:id="BlacklistedHash" text="BlacklistedHash" mnemonicParsing="false" onAction="#BlacklistedHash" prefWidth="200"/>
    <Button fx:id="BlacklistedIP" text="BlacklistedIP" mnemonicParsing="false" onAction="#BlacklistedIP" prefWidth="200"/>
    <Button fx:id="BlacklistedMemorySN" text="BlacklistedMemorySN" mnemonicParsing="false" onAction="#BlacklistedMemorySN" prefWidth="200"/>
    <Button fx:id="BlacklistedSN" text="BlacklistedSN" mnemonicParsing="false" onAction="#BlacklistedSN" prefWidth="200"/>
    <Button fx:id="BlacklistedUUID" text="BlacklistedUUID" mnemonicParsing="false" onAction="#BlacklistedUUID" prefWidth="200"/>
    <Button fx:id="BlacklistedVolumeSN" text="BlacklistedVolumeSN" mnemonicParsing="false" onAction="#BlacklistedVolumeSN" prefWidth="200"/>
    <Separator prefHeight="10" />
    <Button fx:id="ExcludedItems" text="Open ExcludedItems" mnemonicParsing="false" onAction="#ExcludedItems" prefWidth="200"/>
    <Text textAlignment="CENTER"  text="Check link for newest list of junk/malformed hardware IDs or use own list"/>
    <TextField fx:id="genericJunk" minWidth="300" text="https://faforever.zulipchat.com/#narrow/stream/203851-moderators/topic/modified.20mordor"/>
    <Separator prefHeight="10" />
    <Button fx:id="templateCompletedButton" text="Open template for completed" mnemonicParsing="false" onAction="#TemplateCompletedButton" prefWidth="200"/>
    <Button fx:id="templateDiscardedButton" text="Open template for discarded" mnemonicParsing="false" onAction="#TemplateDiscardedButton" prefWidth="200"/>
    <Separator minHeight="10" />
    <Button fx:id="templateReportButton" text="Open template for report" mnemonicParsing="false" onAction="#TemplateReportButton" prefWidth="200"/>
    <Text textAlignment="CENTER"  text="Available variables: %report_id% %game_id% %offender% "/>
    <Separator minHeight="10" />
    <MenuBar xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <Menu fx:id="defaultStartingTabMenuBar" text="Choose default starting tab:">
            <MenuItem fx:id="optionUserManagementTab" text="userManagementTab" onAction="#handleOptionUserManagementTabClicked"/>
            <MenuItem fx:id="optionReportTab" text="reportTab" onAction="#handleOptionReportTabClicked"/>
            <MenuItem fx:id="optionRecentActivityTab" text="recentActivityTab" onAction="#handleOptionRecentActivityTabClicked"/>
        </Menu>
    </MenuBar>
</VBox>
